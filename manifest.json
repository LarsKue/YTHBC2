{
  "name": "YouTube Home Button Changer",
  "version": "2.0.0",
  "description": "Changes the YouTube Home Button",
  "permissions": ["storage"],
  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    "assets/button.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": ["dist/js/content.js"]
    }
  ],
  "manifest_version": 2
}